<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    <Button
        android:id="@+id/buttonClassList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class List" />

    <Button
        android:id="@+id/buttonSpellList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spell List" />

    <Button
        android:id="@+id/buttonClassSpellList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class Spell List" />

    <Button
        android:id="@+id/buttonClassHtml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Class" />

    <Button
        android:id="@+id/buttonSpellHtml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Spell" />

    <Button
        android:id="@+id/buttonSpellJson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Spell JSON" />

    <Button
        android:id="@+id/buttonClassLaunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch Class" />
    
    <Button
        android:id="@+id/buttonSpellLaunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch Spell" />

    </LinearLayout>

    <WebView
        android:id="@+id/logDisplay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>
